<main>

    <!-- breadcrumb-area-start -->
    <section class="breadcrumb-area" style="background-color: wheat;">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-text text-center">
                        <h1>Wishlist</h1>
                        <ul class="breadcrumb-menu">
                            <li><a href="/">Home</a></li>
                            <li><span>Wishlist</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- Cart Area Strat-->
    <section class="cart-area pt-100 pb-100">
        <div class="container">
          <div class="row">
            <div class="col-12">
            
              <form action="#">
                <div class="table-content table-responsive">
                  <table>
                    <thead>
                      <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th></th>
                        <th>Date Added</th>
                        <th>Remove</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% if (wishlistData && wishlistData.length > 0 && wishlistData[0].products.length > 0) { %>
                      <% wishlistData[0].products.forEach(product => { %>
                        <tr>
                          <!-- Product Image -->
                          <td class="product-thumbnail">
                            <a href="#">
                              <img src="/uploads/re-image/<%=product.productId.productImage[1]%>" alt="<%= product.productId.productName %>">
                            </a>
                          </td>
                          <!-- Product Name -->
                          <td class="product-name">
                            <a href="#"><%= product.productId.productName %></a>
                          </td>
                          <!-- Product Price -->
                          <td class="product-price">
                            <span class="amount">$<%= product.productId.salePrice || product.productId.regularPrice %></span>
                          </td>
                          <!-- Add to Cart Button -->
                          <td class="product-quantity">
                            <a href="/productDetails?id=<%= product.productId._id %>"><button class="btn theme-btn-2" type="button" data-product-id="<%= product.productId._id %>">
                              Go TO Details
                            </button>
                          </a>
                          </td>
                          <!-- Date Added -->
                          <td class="product-subtotal">
                            <span class="amount"><%= product.addedOn.toLocaleDateString() %></span>
                          </td>
                          <!-- Remove from Wishlist -->
                          <td class="product-remove">
                              <a href="javascript:void(0);" class="remove-wishlist" data-product-id="<%= product.productId._id %>">
                                  <i class="fa fa-times"></i>
                                </a>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center">
                          <div class="no-wishlist">
                            <h4>Your wishlist is empty !</h4>
                            <a href="/shop"><p >Browse our shop to add products to your wishlist <a href="/shop" style="color: blue;">Click here</a>.</p></a>
                            
                          </div>
                        </td>
                    
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
                  
                </div>
              </form>
             
            
           
            </div>
          </div>
        </div>
      </section>
      
    <!-- Cart Area End-->


    </main>
    <script>
        // Add an event listener to handle removing items from the wishlist
        document.querySelectorAll('.remove-wishlist').forEach((button) => {
          button.addEventListener('click', function () {
            const productId = this.getAttribute('data-product-id');
            console.log('--------------------',productId)
      
            // Confirm before removing
            // showErrorPopup(' remove this item from your wishlist?')

      
            // Make Axios POST request to remove product from wishlist
            axios.delete(`/removeWishlist/${productId}`)
              .then((response) => {
                if (response.data.success) {
                  showSuccessPopup(response.data.message);
                  // Remove the item row from the DOM
                  this.closest('tr').remove();
                } else {
                  showErrorPopup(response.data.message || 'Failed to remove product from wishlist');
                }
              })
              .catch((error) => {
                console.error('Error removing product:', error);
                showErrorPopup('An error occurred while removing the product from the wishlist.');
              });
          });
        });


        function showSuccessPopup(message) {
    const successPopup = document.getElementById('successPopup');
    successPopup.innerText = message;
    successPopup.classList.add('show');
    setTimeout(() => {
      successPopup.classList.remove('show');
    }, 3000);
  }

  function showErrorPopup(message) {
    const errorPopup = document.getElementById('errorPopup');
    errorPopup.innerText = message;
    errorPopup.classList.add('show');
    setTimeout(() => {
      errorPopup.classList.remove('show');
    }, 3000);
  }
      </script>
      
