    <script>
        // Add active class to current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPage = window.location.pathname.split("/").pop();
            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => {
                if (link.getAttribute('href').includes(currentPage)) {
                    link.classList.add('active');
                }
            });

            // Add Funds functionality
            const addFundsBtn = document.getElementById('addFundsBtn');
            const addFundsInput = document.getElementById('addFundsInput');
            const addFundsForm = document.getElementById('addFundsForm');

            addFundsBtn.addEventListener('click', function() {
                addFundsInput.classList.toggle('active');
                if (addFundsInput.classList.contains('active')) {
                    document.getElementById('fundAmount').focus();
                }
            });

            addFundsForm.addEventListener('submit',async function(e) {
                e.preventDefault();
                const fundAmount  =  parseFloat(document.getElementById("fundAmount").value);
                if (fundAmount && parseFloat(fundAmount) <= 0) {
                    showErrorPopup('Please enter a valid amount.');
                    // addFundsInput.classList.remove('active');
                    // document.getElementById('fundAmount').value = '';
                }

                try {
                    const response = await axios.post("/addWallet",{
                        amount:fundAmount,
                    })

                     // Update the UI with the new balance
                       const wallet = response.data.wallet;
                       const currentBalance = wallet.balance;

                     document.querySelector(".text-4xl").textContent = `$${currentBalance.toFixed(2)}`;
                     window.location.reload()
                     showSuccessPopup(" ✔ Funds added successfully!");
                     window.location.reload()
                } catch (error) {
                    const errorMessage = error.response?.data?.message || "An error occurred.";
                    showErrorPopup(errorMessage);
                    console.error(error);
                }
                   // Clear the input field
            document.getElementById("fundAmount").value = "";
            });
        });

        function showSuccessPopup(message) {
    const successPopup = document.getElementById('successPopup');
    successPopup.innerText = message;
    successPopup.classList.add('show');
    setTimeout(() => {
      successPopup.classList.remove('show');
    }, 3000);
  }

  function showErrorPopup(message) {
    const errorPopup = document.getElementById('errorPopup');
    errorPopup.innerText = message;
    errorPopup.classList.add('show');
    setTimeout(() => {
      errorPopup.classList.remove('show');
    }, 3000);
  }
    </script>
